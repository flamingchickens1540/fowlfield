{
    "compilerOptions": {
        "paths": {
            "~/*": ["./*"],
            "~common/*": ["../common/*"]
        },
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "noEmit": true,
        "strict": true,
        "target": "esnext",
        "module": "esnext"
    }
}
